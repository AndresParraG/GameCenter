<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="board">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/_board</item>
        <item name="android:padding">@dimen/grid_padding</item>
    </style>

    <style name="tile">
        <item name="android:layout_width">@dimen/box_size</item>
        <item name="android:layout_height">@dimen/box_size</item>
        <item name="android:layout_margin">@dimen/block_margin</item>
        <item name="android:background">@color/_0</item>
        <item name="android:padding">@dimen/block_padding</item>
        <item name="android:text">@string/null_value</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/block_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="peg_shape">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="void_peg" parent="peg_shape">
        <item name="android:visibility">gone</item>
    </style>

    <style name="clickable_peg" parent="peg_shape">
        <item name="android:onClick">onClick</item>
    </style>

    <style name="toggle_on">
        <item name="android:background">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toggle_off">
        <item name="android:background">@color/_0</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>